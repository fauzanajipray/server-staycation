<div
  class="tab-pane fade show active"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="show-item-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter name"
                name="name"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">QTY</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter qty"
                name="qty"
                required
              />
            </div>
            <input type="text" name="itemId" value="<%= itemId %>" hidden />
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" name="image" required />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="2"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </tfoot>
              <tbody>
                <% for(let i=0; i< feature.length; i++) {%>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= feature[i].name%></td>
                  <td><%= feature[i].qty%></td>
                  <td>
                    <img
                      src="<%= baseUrl %><%= feature[i].imageUrl %>"
                      alt="<%= feature[i].name%>"
                      height="25"
                      width="25"
                    />
                  </td>
                  <td class="text-center">
                    <form
                      action="/admin/item/delete/feature/<%= feature[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void();"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= feature[i].id %>"
                        data-name="<%= feature[i].name %>"
                        data-qty="<%= feature[i].qty %>"
                      >
                        <i class="fas fa-edit"> </i
                      ></a>
                      <input
                        type="text"
                        name="itemId"
                        value="<%= itemId %>"
                        hidden
                      />
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
